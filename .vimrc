set noshowmode

"--------------------------------------------------------------------------------


"------------------------------color-scheme--------------------------------------

call togglebg#map("<F5>")
let g:solarized_termcolors=256

if has('gui_running')
    set background=light
else
    set background=dark
endif
colorscheme solarized

"---------------------------------------------------------------------------------




"-----------------------------------------set----------------------------------
if !&scrolloff
    set scrolloff=4       " Show next 3 lines while scrolling.
endif
set tabstop=4
syntax enable
set showcmd
set shiftwidth=4
set incsearch
set softtabstop=4
set expandtab
set smarttab
set number
set relativenumber
set incsearch

set cursorline
set ruler

"---------------------------------------------------------------------------------

map <C-J> :bnext<CR>
map <C-K> :bprev<CR>
:nnoremap <Space> :set hlsearch! hlsearch?<CR>
nmap <C-T> :TagbarToggle<CR>
set pastetoggle=<F2>
